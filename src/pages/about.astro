---
import MainPageLayout from '@layouts/MainPageLayout.astro'
import Markdown from '@components/misc/Markdown.astro'
import Cover from '@components/Cover.astro'

import { siteConfig } from '@/config'

import { getEntry, render } from 'astro:content'

const aboutPost = await getEntry('spec', 'about');

if (!aboutPost) {
    throw new Error('No about post found');
}
const { Content } = await render(aboutPost);

const pageTitle = "关于 - " + siteConfig.title;
---
<MainPageLayout title={pageTitle}>
    <div class="mx-auto w-full max-w-[min(776px,90%)]">
        <Cover title='关于我' subTitle='Like River!'/>
        <Markdown class="mb-6 markdown-content onload-animation">
            <Content />
        </Markdown>
    </div>
</MainPageLayout>